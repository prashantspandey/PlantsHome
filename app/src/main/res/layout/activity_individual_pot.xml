<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">



    <RelativeLayout
        android:id="@+id/activity_individual_pot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.prashantpandey.nurseryapp.IndividualPotActivity">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/activity_individual_pot_toolbar"

            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="#1B5E20"
            android:layout_marginBottom="15dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="5dp"
        android:id="@+id/activity_individual_pot_imageview"
        android:layout_below="@id/activity_individual_pot_toolbar"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_individual_pot_typeView"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_below="@id/activity_individual_pot_imageview"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Price: Please select one of the sizes to see price."
            android:padding="5dp"
            android:layout_below="@id/activity_individual_pot_typeView"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:id="@+id/activity_individual_pot_priceText"/>
        <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_individual_pot_priceText"
        android:layout_marginTop="10dp"
        android:id="@+id/activity_individual_pot_radiogroup"
               >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6 inch"
            android:padding="5dp"
            android:id="@+id/activity_individual_pot_6InchRad"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8 inch"
            android:padding="5dp"
            android:id="@+id/activity_individual_pot_8InchRad"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9 inch"
            android:padding="5dp"
            android:id="@+id/activity_individual_pot_9InchRad"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 inch"
            android:padding="5dp"
            android:id="@+id/activity_individual_pot_10InchRad"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 inch"
            android:padding="5dp"
            android:id="@+id/activity_individual_pot_12InchRad"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14 inch"
            android:padding="5dp"
            android:id="@+id/activity_individual_pot_14InchRad"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16 inch"
            android:padding="5dp"
            android:id="@+id/activity_individual_pot_16InchRad"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18 inch"
            android:padding="5dp"
            android:id="@+id/activity_individual_pot_18InchRad"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20 inch"
            android:padding="5dp"
            android:id="@+id/activity_individual_pot_20InchRad"/>




    </RadioGroup>


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_keyboard_arrow_left_white_24dp"
        android:layout_below="@id/activity_individual_pot_priceText"
        android:layout_toEndOf="@id/activity_individual_pot_radiogroup"
        android:layout_marginStart="40dp"
        android:id="@+id/activity_individual_pot_decreasequantity"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:padding="5dp"
        android:layout_toEndOf="@id/activity_individual_pot_decreasequantity"
        android:layout_below="@id/activity_individual_pot_priceText"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:id="@+id/activity_individual_pot_quantityText"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_keyboard_arrow_right_white_24dp"
        android:layout_toEndOf="@id/activity_individual_pot_quantityText"
        android:layout_below="@id/activity_individual_pot_priceText"
        android:id="@+id/activity_individual_pot_increasequantity"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_individual_pot_radiogroup"
            android:text="Add To Basket"
            android:layout_alignBaseline="@id/activity_individual_pot_radiogroup"
            android:id="@+id/activity_individual_pot_addToBasket"/>




    </RelativeLayout>

    </ScrollView>
